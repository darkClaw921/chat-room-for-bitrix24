# Основные настройки приложения
APP_NAME="Чат-комната Bitrix24"
DEBUG=true
SECRET_KEY="your-secret-key-here"

# База данных
DATABASE_URL="sqlite:///./app.db"

# Администратор по умолчанию
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@example.com"  
ADMIN_PASSWORD="admin"

# Telegram бот
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
WEBHOOK_URL="https://your-domain.com/webhook"
WEBHOOK_SECRET="your-webhook-secret"

# API токены
WEBHOOK_API_TOKEN="your-webhook-api-token"

# Bitrix24 интеграция
BITRIX_WEBHOOK="https://your-domain.bitrix24.ru/rest/1/your-token/"
DOMAIN_BITRIX="your-domain.bitrix24.ru"

# Часовой пояс (по умолчанию UTC+5)
# Доступные варианты: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE="Asia/Yekaterinburg"  # UTC+5 (Екатеринбург, Пермь, Уфа)
# TIMEZONE="Asia/Almaty"       # UTC+6 (Алматы, Астана) 
# TIMEZONE="Europe/Moscow"     # UTC+3 (Москва, Санкт-Петербург)
# TIMEZONE="Asia/Novosibirsk"  # UTC+7 (Новосибирск, Омск)
# TIMEZONE="UTC"               # UTC+0 (время по Гринвичу) 